<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="customer.homepage.home.InfoServiceActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="654dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/info_service_maintain"
                style="@style/heading_app_info"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20sp"
                android:text="Dịch vụ bảo dưỡng"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/info_service_maintain_detail"
                style="@style/app_info_detail_elaboration"
                android:text="@string/info_service_maintain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_service_maintain" />

            <TextView
                android:id="@+id/info_service_fix"
                style="@style/heading_app_info"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Dịch vụ sửa chữa"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_service_maintain_detail" />

            <TextView
                android:id="@+id/info_service_fix_detail"
                style="@style/app_info_detail_elaboration"
                android:text="@string/info_service_fix"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_service_fix" />

            <TextView
                android:id="@+id/info_service_makeup"
                style="@style/heading_app_info"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Dịch vụ tân trang"
                android:textSize="30sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_service_fix_detail" />

            <TextView
                android:id="@+id/info_service_makeup_detail"
                style="@style/app_info_detail_elaboration"
                android:text="@string/info_service_makeup"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/info_service_makeup" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>